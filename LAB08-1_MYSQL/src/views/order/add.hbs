<!-- src/views/order/add.hbs -->
<div class="container mt-4">
    <h2 class="text-center">Agregar Pedido</h2>
    <div class="card shadow p-4 mt-3" style="max-width: 400px; margin: auto;"> <!-- Ajusta el ancho -->
        <form action="/order/add" method="POST">
            <div class="form-group">
                <label for="order_date">Fecha:</label>
                <input type="datetime-local" class="form-control" name="order_date" required>
            </div>
            <div class="form-group">
                <label for="total">Total:</label>
                <input type="number" step="0.01" class="form-control" name="total" required>
            </div>
            <div class="form-group">
                <label for="invoice_report_url">URL del Reporte:</label>
                <input type="text" class="form-control" name="invoice_report_url">
            </div>
            <div class="form-group">
                <label for="status">Estado:</label>
                <select name="status" class="form-control" required>
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="form-group">
                <label for="user_id">ID de Usuario:</label>
                <input type="number" class="form-control" name="user_id" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Agregar Pedido</button>
            </div>
        </form>
    </div>
</div>
